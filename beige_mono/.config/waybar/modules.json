{
  // Workspaces
  "hyprland/workspaces": {
    "on-scroll-up": "hyprctl dispatch workspace r-1",
    "on-scroll-down": "hyprctl dispatch workspace r+1",
    "on-click": "activate",
    "active-only": false,
    "all-outputs": true,
    "format": "",
    "format-icons": {
      "urgent": "",
      "active": "",
      "default": ""
    },
    "persistent-workspaces": {
      "*": 5
    }
  },

  // Taskbar
  "wlr/taskbar": {
    "format": "{icon}",
    "icon-size": 18,
    "tooltip-format": "{title}",
    "on-click": "activate",
    "on-click-middle": "close",
    "max-length": 15,
    "ignore-list": ["kitty"],
    "app_ids-mapping": {
      "firefoxdeveloperedition": "firefox-developer-edition"
    },
    "rewrite": {
      "Firefox Web Browser": "Firefox",
      "Foot Server": "Terminal"
    }
  },

  // Hyprland Window
  "hyprland/window": {
    "rewrite": {
      "(.*) - Brave": "$1",
      "(.*) - Chromium": "$1",
      "(.*) - Brave Search": "$1",
      "(.*) - Outlook": "$1",
      "(.*) Microsoft Teams": "$1"
    },
    "separate-outputs": true
  },

  // Empty
  "custom/empty": {
    "format": ""
  },

  // Updates Count
  "custom/updates": {
    "format": "ğœ±­âºâºâº {}",
    "escape": true,
    "exec": "~/.config/hypr/scripts/updates.sh",
    "interval": 600,
    "on-click": "foot -e ~/.config/hypr/scripts/installupdates.sh",
    "tooltip-format": "Update system"
  },

  // Super menu launcher
  "custom/menu": {
    "format": "ó°£‡",
    "on-click": "~/.config/wofi/toggle.sh",
    "tooltip-format": "Click to toggle applications menu"
  },

  // Logout menu launcher
  "custom/wlogout": {
    "format": "â»",
    "on-click": "wlogout",
    "tooltip-format": "Open logout menu"
  },

  // Power Menu
  "custom/exit": {
    "format": "ï€‘",
    "on-click": "~/.config/ml4w/scripts/wlogout.sh",
    "tooltip-format": "Power Menu"
  },

  // System tray
  "tray": {
    "icon-size": 21,
    "spacing": 10
  },

  // Clock
  "clock": {
    "format": "{:%H:%M   %d-%m-%Y}",
    "tooltip-format": "{:%A %d %B %Y}\nclick to toggle todo list",
    "on-click": "~/.config/c3/toggle.sh",
    "min-length": 17,
    "max-length": 17
  },

  // Memory
  "memory": {
    "format": "ï”¸ {}%",
    "tooltip-format": " {used} / {total}Gib RAM used",
    "interval": 5,
    "min-length": 7,
    "max-length": 7
  },

  // CPU
  "cpu": {
    "format": "ï‹› {usage}%",
    "interval": 1,
    "min-length": 7,
    "max-length": 7
  },

  // Group Hardware
  "group/hardware": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 300,
      "children-class": "not-memory",
      "transition-left-to-right": false
    },
    "modules": ["custom/system", "disk", "cpu", "memory", "hyprland/language"]
  },

  // Network
  "network": {
    "format": "{ifname}",
    "format-wifi": "ï‡« {signalStrength}% {essid}",
    "format-ethernet": "ï–  {ifname}",
    "format-disconnected": "âœˆ Disconnected",
    "tooltip-format": "ï– {ifname} via {gwaddri}",
    "tooltip-format-wifi": "ï‡«  {ifname} @ {essid}\nIP: {ipaddr}\nStrength: {signalStrength}%\nFreq: {frequency}MHz\nUp: {bandwidthUpBits}\nClick to toggle wifi selector",
    "tooltip-format-ethernet": "ï– {ifname}\nIP: {ipaddr}\n up: {bandwidthUpBits} down: {bandwidthDownBits}",
    "tooltip-format-disconnected": "AirPlane mode",
    "on-click": "foot -T nmtui -e nmtui-connect",
    "interval": 5,
    "min-length": 12,
    "max-length": 12
  },

  // Battery
  "battery": {
    "states": {
      "warning": 30,
      "critical": 20
    },
    "format": "{icon} {capacity}%",
    "format-full": "ï‡¦ 100%",
    "format-charging": "ï‡¦ {capacity}%",
    "format-plugged": "ï‡¦  {capacity}%",
    "format-icons": ["ï‰„ ", "ï‰ƒ ", "ï‰‚ ", "ï‰ ", "ï‰€ "],
    "format-off": "",
    "tooltip-format-full": "Battery full",
    "interval": 5,
    "min-length": 7,
    "max-length": 7
  },

  // Bluetooth
  "bluetooth": {
    "format": "ïŠ“ {status}",
    "format-disabled": "",
    "format-off": "",
    "interval": 30,
    "on-click": "blueman-manager",
    "format-no-controller": ""
  },

  // Other
  "user": {
    "format": "{user}",
    "interval": 60,
    "icon": false
  },

  // backlight:
  "backlight": {
    "format": "{icon} {percent}%",
    "format-icons": [
      "î",
      "î”",
      "î“",
      "î’",
      "î‘",
      "î",
      "î",
      "î",
      "î",
      "îŒ",
      "î‹",
      "îŠ",
      "î‰",
      "îˆ",
      "î›"
    ],
    "tooltip-format": "{percent}% brightness",
    "scroll-step": 1,
    "min-length": 7,
    "max-length": 7
  },

  "wireplumber": {
    "format": "{icon} {volume}%",
    "format-muted": "ïš©  mute",
    "tooltip-format": "{node_name} at {volume}%",
    "scroll-step": "5.0",
    "max-volume": "100.0",
    "format-icons": ["ï€¦", "ï€§", "ï€¨", "ï€¨"],
    "min-length": 7,
    "max-length": 7,
    "scroll-step": 5
  }
}
