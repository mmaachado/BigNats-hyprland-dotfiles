{
  // Workspaces
  "hyprland/workspaces": {
    "show-special": true,
    "special-visible-only": false,
    "on-scroll-up": "hyprctl dispatch workspace r-1",
    "on-scroll-down": "hyprctl dispatch workspace r+1",
    "on-click": "activate",
    "active-only": false,
    "all-outputs": true,
    "format": "",
    "format-icons": {
      "urgent": "",
      "active": "",
      "default": ""
    },
    "persistent-workspaces": {
      "*": 5
    }
  },

  // Taskbar
  "wlr/taskbar": {
    "format": "{icon}",
    "icon-size": 18,
    "tooltip-format": "{title}\n\nClick to go to\nMiddle click to toggle fullscreen\nRight click to close",
    "on-click": "activate",
    "on-click-middle": "fullscreen",
    "on-click-right": "close",
    "max-length": 15,
    "app_ids-mapping": {
      "firefoxdeveloperedition": "firefox-developer-edition"
    },
    "rewrite": {
      "Firefox Web Browser": "Firefox",
      "Kitty Server": "Terminal"
    }
  },

  // Empty
  "custom/empty": {
    "format": ""
  },

  // Updates
  "custom/updates": {
    "format": "ú±≠ {}",
    "escape": true,
    "exec": "~/.config/hypr/scripts/updates_count.sh",
    "interval": 600,
    "on-click": "~/.config/hypr/scripts/updates_toggle.sh",
    "tooltip-format": "Update system"
  },

  // App menu
  "custom/menu": {
    "format": "Û∞£á",
    "on-click": "~/.config/hypr/scripts/appmenu_toggle.sh",
    "tooltip-format": "Toggle app menu"
  },

  // Clipboard menu
  "custom/clipboard": {
    "format": "Óµª",
    "on-click": "~/.config/hypr/scripts/clipboard_toggle.sh",
    "tooltip-format": "Toggle clipboard"
  },

  // Screenshot menu
  "custom/screenshot": {
    "format": "ÔÄæ",
    "on-click": "~/.config/hypr/scripts/screenshotlist.sh",
    "tooltip-format": "Open screenshot menu"
  },

  // Logout menu
  "custom/wlogout": {
    "format": "‚èª",
    "on-click": "wlogout",
    "tooltip-format": "Toggle logout menu"
  },

  // System tray
  "tray": {
    "icon-size": 21,
    "spacing": 0
  },

  // Clock
  "clock": {
    "format": "{:%H:%M   %d-%m-%Y}",
    "tooltip-format": "{:%A %d %B %Y}\nCalendar",
    "min-length": 17,
    "max-length": 17
  },

  // Memory
  "memory": {
    "format": "Ôî∏ {}%",
    "tooltip-format": " {used} / {total}Gib RAM used",
    "interval": 5,
    "on-click": "kitty -T btop -e btop",
    "min-length": 7,
    "max-length": 7
  },

  // CPU
  "cpu": {
    "format": "Ôãõ {usage}%",
    "interval": 1,
    "on-click": "kitty -T btop -e btop",
    "min-length": 7,
    "max-length": 7
  },

  // Network
  "network": {
    "format": "{ifname}",
    "format-wifi": "Ôá´ {signalStrength}% {essid}",
    "format-ethernet": "Ôûñ  {ifname}",
    "format-disconnected": "‚úà Disconnected",
    "tooltip-format": "Ôûñ {ifname} via {gwaddri}",
    "tooltip-format-wifi": "Ôá´  {ifname} @ {essid}\nIP: {ipaddr}\nStrength: {signalStrength}%\nFreq: {frequency}MHz\nUp: {bandwidthUpBits}\nClick to toggle wifi selector",
    "tooltip-format-ethernet": "Ôûñ {ifname}\nIP: {ipaddr}\n up: {bandwidthUpBits} down: {bandwidthDownBits}",
    "tooltip-format-disconnected": "AirPlane mode",
    "on-click": "~/.config/hypr/scripts/wifilist_toggle.sh",
    "interval": 5,
    "min-length": 12,
    "max-length": 12
  },

  // Battery
  "battery": {
    "states": {
      "warning": 30,
      "critical": 20
    },
    "format": "{icon} {capacity}%",
    "format-full": "Ôá¶ 100%",
    "format-charging": "Ôá¶ {capacity}%",
    "format-plugged": "Ôá¶  {capacity}%",
    "format-icons": ["ÔâÑ ", "ÔâÉ ", "ÔâÇ ", "ÔâÅ ", "ÔâÄ "],
    "format-off": "",
    "tooltip-format-full": "Battery full",
    "on-click": "power-options-gtk",
    "interval": 5,
    "min-length": 7,
    "max-length": 7
  },

  // Bluetooth
  "bluetooth": {
    //"format": "Û∞ÇØ {status}",
    "format-on": "Û∞ÇØ",
    "format-off": "Û∞Ç≤",
    "format-disabled": "Û∞Ç≤",
    "format-connected": "Û∞Ç±‚Äâ{num_connections}",
    "tooltip-format-connected": "{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
    "on-click": "blueman-applet"
    //"interval": 30,
  },

  // backlight:
  "backlight": {
    "format": "{icon} {percent}%",
    "format-icons": [
      "Óéç",
      "Óèî",
      "Óèì",
      "Óèí",
      "Óèë",
      "Óèê",
      "Óèè",
      "Óèé",
      "Óèç",
      "Óèå",
      "Óèã",
      "Óèä",
      "Óèâ",
      "Óèà",
      "Óéõ"
    ],
    "tooltip-format": "{percent}% brightness",
    "min-length": 7,
    "max-length": 7,
    "scroll-step": 10
  },

  "wireplumber": {
    "format": "{icon} {volume}%",
    "format-muted": "Ôö©  mute",
    "tooltip-format": "{node_name} at {volume}%",
    "scroll-step": "5",
    "max-volume": "100",
    "format-icons": ["ÔÄ¶", "ÔÄß", "ÔÄ®", "ÔÄ®"],
    "min-length": 7,
    "max-length": 7,
    "scroll-step": 5
  }
}
