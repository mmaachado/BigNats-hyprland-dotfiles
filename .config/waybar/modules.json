{
  // Workspaces
  "hyprland/workspaces": {
    "on-scroll-up": "hyprctl dispatch workspace r-1",
    "on-scroll-down": "hyprctl dispatch workspace r+1",
    "on-click": "activate",
    "active-only": false,
    "all-outputs": true,
    "format": "{}",
    "format-icons": {
      "urgent": "",
      "active": "",
      "default": ""
    },
    "persistent-workspaces": {
      "*": 5
    }
  },

  // Hyprland Window
  "hyprland/window": {
    "rewrite": {
      "(.*) - Brave": "$1",
      "(.*) - Chromium": "$1",
      "(.*) - Brave Search": "$1",
      "(.*) - Outlook": "$1",
      "(.*) Microsoft Teams": "$1"
    },
    "separate-outputs": true
  },

  // Empty
  "custom/empty": {
    "format": ""
  },

  // Updates Count
  "custom/updates": {
    "format": "ğœ±­âºâºâº {}",
    "escape": true,
    "exec": "~/.config/hypr/scripts/updates.sh",
    "interval": 1800,
    "on-click": "foot -e ~/.config/hypr/scripts/installupdates.sh",
    "tooltip-format": "Update system"
  },

  // Super menu launcher
  "custom/supermenu": {
    "format": "Menu",
    "on-click": "source ~/.config/hypr/scripts/supermenu.sh",
    "tooltip-format": "Open super menu"
  },

  // Logout menu launcher
  "custom/wlogout": {
    "format": "â»",
    "on-click": "wlogout",
    "tooltip-format": "Open logout menu"
  },

  // Power Menu
  "custom/exit": {
    "format": "ï€‘",
    "on-click": "~/.config/ml4w/scripts/wlogout.sh",
    "tooltip-format": "Power Menu"
  },

  // System tray
  "tray": {
    "icon-size": 21,
    "spacing": 10
  },

  // Clock
  "clock": {
    "format": "{:%H:%M}",
    "tooltip-format": "{:%a %d %B %Y}",
    "min-length": 7,
    "max-length": 7
  },

  // Memory
  "memory": {
    "format": "ï”¸ {}%",
    "tooltip-format": " {used} / {total}Gib RAM used",
    "interval": 5,
    "min-length": 7,
    "max-length": 7
  },

  // CPU
  "cpu": {
    "format": "ï‹› {usage}%",
    "interval": 1,
    "min-length": 7,
    "max-length": 7
  },

  // Group Hardware
  "group/hardware": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 300,
      "children-class": "not-memory",
      "transition-left-to-right": false
    },
    "modules": ["custom/system", "disk", "cpu", "memory", "hyprland/language"]
  },

  // Network
  "network": {
    "format": "{ifname}",
    "format-wifi": "ï‡« ({signalStrength}%) {essid}",
    "format-ethernet": "ï–  {ifname}",
    "format-disconnected": "âœˆ Disconnected",
    "tooltip-format": "ï– {ifname} via {gwaddri}",
    "tooltip-format-wifi": "ï‡«  {ifname} @ {essid}\nIP: {ipaddr}\nStrength: {signalStrength}%\nFreq: {frequency}MHz\nUp: {bandwidthUpBits} Down: {bandwidthDownBits}",
    "tooltip-format-ethernet": "ï– {ifname}\nIP: {ipaddr}\n up: {bandwidthUpBits} down: {bandwidthDownBits}",
    "tooltip-format-disconnected": "AirPlane mode",
    "on-click": "foot -T nmtui -e nmtui-connect",
    "interval": 5,
    "min-length": 12,
    "max-length": 12
  },

  // Battery
  "battery": {
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{icon} {capacity}%",
    "format-charging": "ï‡¦ {capacity}%",
    "format-plugged": "ï‡¦  {capacity}%",
    "format-icons": ["ï‰„ ", "ï‰ƒ ", "ï‰‚ ", "ï‰ ", "ï‰€ "],
    "format-off": "",
    "interval": 5,
    "min-length": 7,
    "max-length": 7
  },

  // Pulseaudio
  "pulseaudio": {
    // "scroll-step": 1, // %, can be a float
    "format": "{icon}  {volume}%",
    "format-bluetooth": "{volume}% {icon}ïŠ” {format_source}",
    "format-bluetooth-muted": "ïš© {icon}ïŠ” {format_source}",
    "format-muted": "ïš© {format_source}",
    "format-source": "{volume}% ï„°",
    "format-source-muted": "ï„±",
    "format-icons": {
      "headphone": "ï€¥ ",
      "hands-free": "ï– ",
      "headset": "ï– ",
      "phone": "ï‚• ",
      "portable": "ï‚• ",
      "car": "ï†¹ ",
      "default": ["ï€¦", "ï€¨", "ï€¨"]
    },
    "on-click": "pavucontrol"
  },

  // Bluetooth
  "bluetooth": {
    "format": "ïŠ“ {status}",
    "format-disabled": "",
    "format-off": "",
    "interval": 30,
    "on-click": "blueman-manager",
    "format-no-controller": ""
  },

  // Other
  "user": {
    "format": "{user}",
    "interval": 60,
    "icon": false
  },

  // backlight:
  "backlight": {
    "format": "{icon} {percent}%",
    "format-icons": [
      "î",
      "î”",
      "î“",
      "î’",
      "î‘",
      "î",
      "î",
      "î",
      "î",
      "îŒ",
      "î‹",
      "îŠ",
      "î‰",
      "îˆ",
      "î›"
    ],
    "scroll-step": 1,
    "min-length": 7,
    "max-length": 7
  },

  "wireplumber": {
    "format": "{icon} {volume}%",
    "format-muted": "ïš©  mute",
    "scroll-step": "5.0",
    "tooltip": "false",
    "max-volume": "100.0",
    "format-icons": ["ï€¦", "ï€§", "ï€¨", "ï€¨"],
    "min-length": 7,
    "max-length": 7
  }
}
